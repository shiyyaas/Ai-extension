{
  "manifest_version": 3,
  "name": "Lumina - Smart Reading Assistant",
  "version": "1.0",
  "description": "Summarize, explain, and simplify text instantly with on-device AI",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "Icons/shiyas.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}